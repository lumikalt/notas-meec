---
import type { CollectionEntry } from "astro:content";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"disciplinas">["data"];
---

<article>
    <slot />
    <Footer />
</article>

<style is:global>
    body {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }

    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
        background-color: linear-gradient(
            red,
            white
        );
    }
</style>
